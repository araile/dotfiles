[user]
	#name = "<FULL NAME>"
	#email = <EMAIL ADDRESS>
	useConfigOnly = true
[alias]
	amend = commit --amend --reset-author
	br = branch
	cached = diff --cached
	co = checkout
	f5 = fetch --prune
	ff = merge --ff-only
	git = !exec git
	ll = log --graph --pretty='format:%C(auto)%h%d %s  %C(dim)%an, %ar%C(reset)'
	la = log --graph --pretty='format:%C(auto)%h%d %s  %C(dim)%an, %ar%C(reset)' --all
	lc = log --pretty='format:%C(auto)%h %s' --first-parent
	lg = log --graph --decorate=short --graph --date=iso
	mm = merge --no-ff
	nx = annex
	pf = pull --prune --ff-only
	pick = cherry-pick
	pr = pull --prune --rebase
	st = status
	unadd = reset HEAD --
	when = blame
	whose-line-is-it-anyway = blame
[core]
	#excludesfile = <PATH TO HOME>/.gitignore_global
	quotePath = false
[color]
	ui = auto
	diff = auto
	branch = auto
	status = auto
[rebase]
	instructionFormat = [%ai] %s
[diff]
	renames = copies
