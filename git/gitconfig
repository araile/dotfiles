[user]
	#name = "<FULL NAME>"
	#email = <EMAIL ADDRESS>
	useConfigOnly = true
[alias]
	amend-new = commit --amend --reset-author
	br = branch
	cached = diff --cached
	co = checkout
	f5 = fetch --prune
	ff = merge --ff-only
	initcommit = !git init && git commit -m Init --allow-empty
	l1 = log --pretty=oneline
	lg = log --decorate=short --date-order --graph --date=iso
	ll = log --decorate=short --date-order --graph --date=iso --pretty=oneline --all
	mm = merge --no-ff
	pick = cherry-pick
	st = status
	unadd = reset HEAD --
	when = blame
	# http://caiustheory.com/git-git-git-git-git/
	git = !exec git
[core]
	#editor = gvim --nofork
	#editor = mvim -f --nomru -c 'au VimLeave * !open -a Terminal'
	#excludesfile = <PATH TO HOME>/.gitignore_global
	fileMode = true
	quotePath = false
	fsyncObjectFiles = true
[color]
	ui = auto
	diff = auto
	branch = auto
	status = auto
[diff]
	renames = copies
[push]
	default = current
[rebase]
	instructionFormat = [%ai] %s
[transfer]
	fsckObjects = true
